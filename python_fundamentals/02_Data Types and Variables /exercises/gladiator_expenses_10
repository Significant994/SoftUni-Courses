lost_fight_count = int(input())

helmet_price = float(input())
sword_price = float(input())
shield_price = float(input())
armor_price = float(input())

total_price = 0

total_price = lost_fight_count // 2 * helmet_price + lost_fight_count // 3 * sword_price + \
              lost_fight_count // 6 * shield_price + lost_fight_count // 12 * armor_price

print(f"Gladiator expenses: {total_price:.2f} aureus")

