def price_calculator(product, quantity):
    price = 0
    if product == "coffee":
        price = quantity * 1.50
    elif product == "water":
        price = quantity * 1.00
    elif product == "coke":
        price = quantity * 1.4
    elif product == "snacks":
        price = quantity * 2.00

    return price


order = input()
amount = int(input())
result = price_calculator(order, amount)
print(f"{result:.2f}")
